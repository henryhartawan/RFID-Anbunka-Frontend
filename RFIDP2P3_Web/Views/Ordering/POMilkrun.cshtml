@{
	ViewData["Title"] = "PO Milkrun";
	string myurl = new ConfigurationBuilder().AddJsonFile("appsettings.json").Build().GetSection("Path:URL").Value;
}

<div class="page-main">
	<div class="page-content padding-10">
		<div id="grid" style="margin-top:5px; margin-bottom:5px;"></div>
	</div>
</div>

<div class="modal fade modal-primary" id="editorUpload" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="padding-top:25vh;">
	<div class="" role="document" style="padding-left:25vw;">
		<div class="modal-content" style="width:50vw">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<h4 class="modal-title" id="myModalTitle">Upload PO Milkrun</h4>
			</div>
			<div class="modal-body margin-bottom-0 padding-bottom-0">
				<form id="formUpload" enctype="multipart/form-data">
					<span>Download template <a href="../../templates/PO Milkrun.xlsx" style="color:#0099ff" download="Template PO Milkrun.xlsx">here</a></span>
					<input type="file" name="file" class="form-control" id="fileUpload" accept=".xls,.xlsx" />
				</form>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal" id='clear'>Close</button>
				<button type="button" class="btn btn-primary" id="btnSaveUpload" value="Upload">Upload</button>
			</div>
		</div>
	</div>
</div>

<script>
	var AppD = {
		attachEvents: function () {
			var o = this;
			o.dom.$btnSaveUpload.on('click', o.eventHandlers.onClickBtnSaveUpload.bind(o));
			o.dom.$grid.on('click', '#btnUpload', o.eventHandlers.onClickBtnUpload.bind(o));
			o.dom.$grid.on('click', '#btnDelete', o.eventHandlers.onClickBtnDelete.bind(o));
			o.dom.$grid.on('click', '#btnExcel', o.eventHandlers.onClickBtnExcel.bind(o));
		},
		cacheDom: function () {
			var o = this;
			o.dom.$grid = $("#grid");
			o.dom.$editorUpload = $("#editorUpload");
			o.dom.$btnSaveUpload = $("#btnSaveUpload");
		},
		data: {
			Periode: new Date(),
		},
		dom: {},
		eventHandlers: {
			onClickBtnDelete: function(){
				var o = this;
				var filters = o.dom.$grid.data('kendoGrid').dataSource.filter();

				if(filters == undefined){
					swal.fire({title: 'Warning', text: 'Please filter Upload ID!', icon: 'warning'});
				}else{
					var filter_count = o.dom.$grid.data('kendoGrid').dataSource.filter().filters.length || "";
					var upload_id = "";

					for(var i = 0; i < filter_count; i++){
						if(o.dom.$grid.data('kendoGrid').dataSource.filter().filters[i].field == "Upload_ID"){
							upload_id = o.dom.$grid.data('kendoGrid').dataSource.filter().filters[i].value;
							i = filter_count;
						}
					}

					if(upload_id == ''){
						swal.fire({title: '', text: 'Please filter Upload ID!', icon: 'warning'});
					}else{
						swal.fire({
							title: 'Delete PO Milkrun?',
							text: "You won't be able to revert this!",
							icon: 'warning',
							showCancelButton: true,
							confirmButtonText: 'Yes'
						}).then((result) => {
							if (result.isConfirmed) {
								$.ajax({
									method: 'post',
									headers: { 'Content-Type': 'application/json', 'XApiKey': 'pgH7QzFHJx4w46fI~5Uzi4RvtTwlEXp' },
									url: "@myurl"+'POMilkrun/DEL',
									dataType: 'text',
									data: JSON.stringify({
										Upload_ID: upload_id
									})
								}).done(function( data, textStatus, jqXHR ) {
									if(data !== 'success'){
										swal.fire('', data, 'error');
										console.log(jqXHR);
										return;
									}
									swal.fire({ title: 'Success', text: 'Data deleted', icon: 'success', timer: 2000, showConfirmButton: false });
								}).fail(function( jqXHR, textStatus, errorThrown ) {
									swal.fire('Error', errorThrown + (jqXHR.responseText !== '' ? ': ' + jqXHR.responseText : ''), 'error');
									console.log(jqXHR);
								}).always(function( data_or_jqXHR, textStatus, jqXHR_or_errorThrown ){
									o.dom.$grid.data('kendoGrid').dataSource.read();
								});
							}
						});
					}
				}
			},
			onClickBtnExcel: function () {
				var o = this;
				o.dom.$grid.data('kendoGrid').saveAsExcel();
			},
			onClickBtnUpload: function () {
				var o = this;
				$("#fileUpload").data('kendoUpload').clearAllFiles();
				o.dom.$editorUpload.modal('show');
			},
			onClickBtnSaveUpload: function () {
				var o = this;
				swal.fire({
					title: 'Upload PO Milkrun?',
					icon: 'warning',
					showCancelButton: true,
					confirmButtonText: 'Yes'
				}).then((result) => {
					if (result.isConfirmed) {
						let formData = new FormData();
						let files = $("#fileUpload").data('kendoUpload').getFiles();
						let file = files[0].rawFile;
						formData.append('file', file);

						$.ajax({
							url: "@myurl" + "POMilkrun/Upload?UID=" + "@Context.Session.GetString("PIC_ID")",
							headers: { 'XApiKey': 'pgH7QzFHJx4w46fI~5Uzi4RvtTwlEXp' },
							type: 'post',
							data: formData,
							contentType: false,
							processData: false
						}).done(function (data, textStatus, jqXHR) {
							var remarks = data[0].Remarks;
							if(remarks != '') {
								swal.fire({ title: 'Warning', text: remarks, icon: 'warning'});
							} else {
								o.dom.$editorUpload.modal('hide');
								swal.fire({ title: 'Success', text: 'Data Uploaded', icon: 'success', timer: 2000, showConfirmButton: false });
								$("#fileUpload").data('kendoUpload').clearAllFiles();
							}
						}).always(function (data_or_jqXHR, textStatus, jqXHR_or_errorThrown) {
							$("#grid").data('kendoGrid').dataSource.read();
							o.dom.$btnLoad.click();
							$("#fileUpload").data('kendoUpload').clearAllFiles();
						});
					}
				});
			}
		},
		init: function () {
			var o = this;
			o.cacheDom();
			o.attachEvents();
			o.initElements();
		},
		initElements: function () {
			var o = this;

			o.dom.$grid.kendoGrid({
				excel: {
					fileName: "PO Milkrun.xlsx",
					allPages: true,
					filterable: true
				},
				dataSource: {
					transport: {
						read: function (options) {
							$.ajax({
								method: 'post',
								headers: { 'Content-Type': 'application/json', 'XApiKey': 'pgH7QzFHJx4w46fI~5Uzi4RvtTwlEXp' },
								url: "@myurl"+'POMilkrun/INQ',
								dataType: 'text',
								data: JSON.stringify({
									Periode: kendo.toString(o.data.Periode, 'yyyyMM')
								})
							}).done(function (data, textStatus, jqXHR) {
								try {
									var result = JSON.parse(data);
								}
								catch (e) {
									swal.fire('Error', 'Error loading grid', 'error');
									console.log(data);
									options.success({ data: [] });
									return;
								}
								options.success(result);
							}).fail(function (jqXHR, textStatus, errorThrown) {
								swal.fire('Error', (jqXHR.responseText !== '' ? ': ' + jqXHR.responseText : ''), 'error');
								console.log(jqXHR);
								options.success({ data: [] });
							});
						}
					},
					schema: {
						model: {
							id: "PO_ID",
							fields: {
								PO_ID: { type: "string" },
								RouteCode: { type: "string" },
								PO_No: { type: "string" },
								Periode: { type: "string" },
								PO_Status: { type: "string" },
								Upload_ID: { type: "string" },
								Upload_Date: { type: "string" },
								Upload_By: { type: "string" }
							}
						}
					},
					pageSize: 20
				},
				scrollable: true,
				sortable: true,
				resizable: true,
				reorderable: true,
				filterable: {
					extra: false,
					operators: {
						string: {
							contains: "Contains",
							eq: "Equal to",
							neq: "Not equal to"
						}
					}
				},
				pageable: {
					refresh: true,
					input: true,
					numeric: true,
					pageSizes: true,
					buttonCount: 5
				},
				columns: [
				{
					field: "PO_ID",
					title: "ID",
					width: 100
				},
				{
					field: "RouteCode",
					title: "Part",
					width: 150
				},
				{
					field: "PO_No",
					title: "PO No",
					width: 100
				},
				{
					field: "Periode",
					title: "Periode",
					width: 100
				},
				{
					field: "PO_Status",
					title: "Status",
					width: 100
				},
				{
					title: "Upload",
					columns: [
					{
						field: "Upload_ID",
						title: "ID",
						width: 100,
						template: "<div class='customClass'> #= (Upload_ID == null) ? ' ' : kendo.toString(Upload_ID, '') # </div>",
					},
					{
						field: "Upload_Date",
						title: "Date",
						width: 150
					},
					{
						field: "Upload_By",
						title: "by",
						width: 100
					}
					]
				}],
				toolbar: $("#template_toolbar").html(),
				dataBound: function(e) {
					o.initAfter();
				}
			});

			$("#fileUpload").kendoUpload({
				multiple: false,
				validation: {
					allowedExtensions: [".xls", "xlsx"]
				}
			});
		},
		initAfter: function () {
			var o = this;
			if (o.initAfterCalled) return;
			o.initAfterCalled = true;

			o.dom.Periode = $("#Periode");

			o.dom.Periode.kendoDatePicker({
				start: "year",
				depth: "year",
				format: 'yyyyMM',
				value: o.data.Periode,
				change: function () {
					o.data.Periode = this.value() != null ? this.value() : '';

					if(this.value()){
						o.dom.$grid.data('kendoGrid').dataSource.read();
					}
				}
			});
		}
	};

	$(function () {
		AppD.init();
	});
</script>

<script type="text/x-kendo-template" id="template_toolbar">
	<span class="k-pager-refresh" style="font-weight: bold">&nbsp;&nbsp;- PO Milkrun -&nbsp;&nbsp;</span>
	<div class="toolbar">
	@if (Context.Session.GetString("add_POMilkrun") == "True")
	{
			<button data-toggle="tooltip" title="Upload" type="button" class="btn ink-reaction btn-floating-action btn-xs btn-warning" id="btnUpload">
				<i class="k-icon k-i-upload"></i>
			</button>
	}
	@if (Context.Session.GetString("del_POMilkrun") == "True")
	{
			<button data-toggle="tooltip" title="Delete" type="button" class="btn ink-reaction btn-floating-action btn-xs btn-warning" id="btnDelete">
				<i class="k-icon k-i-delete"></i>
			</button>
	}
		<button data-toggle="tooltip" title="Save as Excel" type="button" class="btn ink-reaction btn-floating-action btn-xs btn-warning" id="btnExcel">
			<i class="k-icon k-i-excel"></i>
		</button>
		&nbsp;&nbsp;
		<input type="date" id="Periode" placeholder="Periode" />
	</div>
</script>
