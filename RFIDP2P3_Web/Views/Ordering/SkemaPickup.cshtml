@{
	ViewData["Title"] = "Skema Pickup";
	string myurl = new ConfigurationBuilder().AddJsonFile("appsettings.json").Build().GetSection("Path:URL").Value;
}

<div class="page-main">
	<div class="page-content padding-10">
		<div id="grid" style="margin-top:5px; margin-bottom:5px;"></div>
	</div>
</div>

<script>
	var AppD = {
		attachEvents: function () {
			var o = this;
			o.dom.$grid.on('click', '#btnExcel', o.eventHandlers.onClickBtnExcel.bind(o));
		},
		cacheDom: function () {
			var o = this;
			o.dom.$grid = $("#grid");
		},
		data: {
			Prod_Date: new Date(),
			Line: ''
		},
		dom: {},
		eventHandlers: {
			onClickBtnExcel: function () {
				var o = this;
				o.dom.$grid.data('kendoGrid').saveAsExcel();
			}
		},
		init: function () {
			var o = this;
			o.cacheDom();
			o.attachEvents();
			o.initElements();
		},
		initElements: function () {
			var o = this;

			o.dom.$grid.kendoGrid({
				excel: {
					fileName: "Skema Pickup.xlsx",
					allPages: true,
					filterable: true
				},
				dataSource: {
					transport: {
						read: function (options) {
							$.ajax({
								method: 'post',
								headers: { 'Content-Type': 'application/json', 'XApiKey': 'pgH7QzFHJx4w46fI~5Uzi4RvtTwlEXp' },
								url: "@myurl"+'SkemaPickup/INQ',
								dataType: 'text',
								data: JSON.stringify({
									Prod_Date: kendo.toString(o.data.Prod_Date, 'yyyyMMdd'),
									Line: o.data.Line
								})
							}).done(function (data, textStatus, jqXHR) {
								try {
									var result = JSON.parse(data);
								}
								catch (e) {
									swal.fire('Error', 'Error loading grid', 'error');
									console.log(data);
									options.success({ data: [] });
									return;
								}
								options.success(result);
							}).fail(function (jqXHR, textStatus, errorThrown) {
								swal.fire('Error', (jqXHR.responseText !== '' ? ': ' + jqXHR.responseText : ''), 'error');
								console.log(jqXHR);
								options.success({ data: [] });
							});
						}
					},
					schema: {
						model: {
							id: "ExCore",
							fields: {
								Groups: { type: "string" },
								ExCore: { type: "string" },
								LineOrderCode: { type: "string" },
								DockCode: { type: "string" },
								Prod_Date: { type: "date" },
								RouteCode: { type: "string" },
								TimeArrival: { type: "string" },
								Jam_Awal_Day: { type: "string" },
								Jam_Awal_Night: { type: "string" },
								Calc1: { type: "string" },
								Calc2: { type: "string" },
								MinutePerPL: { type: "number" },
								Last_PickUp_ID_PL: { type: "number" },
								PickUp_ID_PL_Awal: { type: "number" },
								Last_PickUp_ID_PL_Before: { type: "string" },
								Last_PickUp_ID_Date_Before: { type: "string" },
								JobNo: {type: "string"},
								SupplierCode: {type: "string"},
								SupplierName: {type: "string"}
							}
						}
					},
					pageSize: 20
				},
				scrollable: true,
				sortable: true,
				resizable: true,
				reorderable: true,
				filterable: {
					extra: false,
					operators: {
						string: {
							contains: "Contains",
							eq: "Equal to",
							neq: "Not equal to"
						}
					}
				},
				pageable: {
					refresh: true,
					input: true,
					numeric: true,
					pageSizes: true,
					buttonCount: 5
				},
				columns: [
				{
					field: "Groups",
					title: "Groups",
					width: 100,
					template: "<div class='customClass'> #= (Groups == null) ? ' ' : kendo.toString(Groups, '') # </div>",
				},
				{
					field: "ExCore",
					title: "Ex Core",
					width: 100,
					template: "<div class='customClass'> #= (ExCore == null) ? ' ' : kendo.toString(ExCore, '') # </div>",
				},
				{
					field: "JobNo",
					title: "Job No",
					width: 70,
				},
				{
					title: "Supplier",
					columns: [
					{
						field: "SupplierCode",
						title: "Code",
						width: 70,
					},
					{
						field: "SupplierName",
						title: "Name",
						width: 150,
						template: "<div class='customClass'> #= (SupplierName == null) ? ' ' : kendo.toString(SupplierName, '') # </div>",
					}]
				},
				{
					field: "LineOrderCode",
					title: "Line",
					width: 100,
					template: "<div class='customClass'> #= (LineOrderCode == null) ? ' ' : kendo.toString(LineOrderCode, '') # </div>",
				},
				{
					field: "DockCode",
					title: "Dock",
					width: 100,
					template: "<div class='customClass'> #= (DockCode == null) ? ' ' : kendo.toString(DockCode, '') # </div>",
				},
				{
					field: "Prod_Date",
					title: "Prod Date",
					width: 100,
					template: "<div class='customClass'> #= (Prod_Date == null) ? ' ' : kendo.toString(Prod_Date, 'dd/MM/yyyy') # </div>",
				},
				{
					field: "RouteCode",
					title: "Route Code",
					width: 100,
					template: "<div class='customClass'> #= (RouteCode == null) ? ' ' : kendo.toString(RouteCode, '') # </div>",
				},
				{
					title: "Time",
					columns:[
					{
						field: "TimeArrival",
						title: "Time Arrival",
						width: 100,
						template: "<div class='customClass'> #= (TimeArrival == null) ? ' ' : kendo.toString(TimeArrival, 'HH:mm') # </div>",
					},
					{
						field: "Jam_Awal_Day",
						title: "Start Day",
						width: 100,
						template: "<div class='customClass'> #= (Jam_Awal_Day == null) ? ' ' : kendo.toString(Jam_Awal_Day, 'HH:mm') # </div>",
					},
					{
						field: "Jam_Awal_Night",
						title: "Start Night",
						width: 100,
						template: "<div class='customClass'> #= (Jam_Awal_Night == null) ? ' ' : kendo.toString(Jam_Awal_Night, 'HH:mm') # </div>",
					},
					{
						field: "Calc1",
						title: "Gap Time 1st ETA",
						width: 130,
						template: "<div class='customClass'> #= (Calc1 == null) ? ' ' : kendo.toString(Calc1, '') # </div>",
					},
					{
						field: "Calc2",
						title: "Gap Time to Supply",
						width: 130,
						template: "<div class='customClass'> #= (Calc2 == null) ? ' ' : kendo.toString(Calc2, '') # </div>",
					}]
				},
				{
					field: "MinutePerPL",
					title: "Minute/PL",
					width: 50,
					template: "<div class='customClass'> #= (MinutePerPL == null) ? '0' : kendo.toString(MinutePerPL, '0') # </div>",
				},
				{
					title: "Pickup Yesterday",
					columns:[
					{
						field: "Last_PickUp_ID_PL_Before",
						title: "PL",
						width: 50,
						template: "<div class='customClass'> #= (Last_PickUp_ID_PL_Before == null) ? ' ' : kendo.toString(Last_PickUp_ID_PL_Before, '0') # </div>",
					},
					{
						field: "Last_PickUp_ID_Date_Before",
						title: "Date",
						width: 100,
						template: "<div class='customClass'> #= (Last_PickUp_ID_Date_Before == null) ? ' ' : kendo.toString(Last_PickUp_ID_Date_Before, 'dd/MM/yyyy') # </div>",
					}]
				},
				{
					field: "PickUp_ID_PL_Awal",
					title: "PL Awal",
					width: 80,
					template: "<div class='customClass'> #= (PickUp_ID_PL_Awal == null) ? '0' : kendo.toString(PickUp_ID_PL_Awal, '0') # </div>",
				},
				{
					field: "Last_PickUp_ID_PL",
					title: "PL Akhir",
					width: 80,
					template: "<div class='customClass'> #= (Last_PickUp_ID_PL == null) ? '0' : kendo.toString(Last_PickUp_ID_PL, '0') # </div>",
				}],
				toolbar: $("#template_toolbar").html(),
				dataBound: function(e) {
					o.initAfter();
				}
			});
		},
		initAfter: function () {
			var o = this;
			if (o.initAfterCalled) return;
			o.initAfterCalled = true;

			o.dom.Prod_Date = $("#Prod_Date");
			o.dom.Line = $("#LineOrderCode");

			o.dom.Prod_Date.kendoDatePicker({
				format: 'dd/MM/yyyy',
				value: o.data.Prod_Date,
				change: function () {
					o.data.Prod_Date = this.value() != null ? this.value() : '';

					if(this.value()){
						o.dom.$grid.data('kendoGrid').dataSource.read();
					}
				}
			});

			o.dom.Line.kendoComboBox({
				dataValueField: "IdValue",
				dataTextField: "ViewValue",
				filter: "contains",
				value: o.data.Line,
				dataSource: {
					transport: {
						read: function (options) {
							$.ajax({
								method: 'post',
								headers: { 'Content-Type': 'application/json', 'XApiKey': 'pgH7QzFHJx4w46fI~5Uzi4RvtTwlEXp' },
								url: "@myurl" + 'DropDown/INQ',
								dataType: 'text',
								data: JSON.stringify({ Ftype: "LineOrder", Plant: "" })
							}).done(function (data, textStatus, jqXHR) {
								try {
									var result = JSON.parse(data);
								}
								catch (e) {
									swal.fire('Error', 'Error loading grid', 'error');
									options.success({ data: [] });
									return;
								}
								options.success(result);
							}).fail(function (jqXHR, textStatus, errorThrown) {
								swal.fire('Error', (jqXHR.responseText !== '' ? ': ' + jqXHR.responseText : ''), 'error');
								options.success({ data: [] });
							});
						}
					}
				},
				change: function(){
					o.data.Line = this.value();

					if (this.value() && this.selectedIndex == -1) {
						this.text("");
						this.value(null);
					}

					o.dom.$grid.data('kendoGrid').dataSource.read();
				}
			});
		}
	};

	$(function () {
		AppD.init();
	});
</script>

<script type="text/x-kendo-template" id="template_toolbar">
	<span class="k-pager-refresh" style="font-weight: bold">&nbsp;&nbsp;- Skema Pickup -&nbsp;&nbsp;</span>
	<div class="toolbar">
		<button data-toggle="tooltip" title="Save as Excel" type="button" class="btn ink-reaction btn-floating-action btn-xs btn-warning" id="btnExcel">
			<i class="k-icon k-i-excel"></i>
		</button>
		&nbsp;&nbsp;
		<input type="date" id="Prod_Date" placeholder="Periode" />
		&nbsp;&nbsp;
		<input type="date" id="LineOrderCode" placeholder="Line" />
	</div>
</script>
