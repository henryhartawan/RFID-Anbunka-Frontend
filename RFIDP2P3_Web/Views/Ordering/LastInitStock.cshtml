@{
	ViewData["Title"] = "Last Init Stock";
	string myurl = new ConfigurationBuilder().AddJsonFile("appsettings.json").Build().GetSection("Path:URL").Value;
}

<div class="page-main">
	<div class="page-content padding-10">
		<button type="button" id="btnLoad" class="btn btn-primary" style="display:none;">Load</button>
		<div id="grid" style="margin-top:5px; margin-bottom:5px;"></div>
	</div>
</div>

<script>
	var AppD = {
		attachEvents: function () {
			var o = this;
			o.dom.$btnLoad.on('click', o.eventHandlers.onClickBtnLoad.bind(o));
			o.dom.$grid.on('click', '#btnExcel', o.eventHandlers.onClickBtnExcel.bind(o));
		},
		cacheDom: function () {
			var o = this;
			o.dom.$grid = $("#grid");
			o.dom.$btnLoad = $("#btnLoad");
		},
		data: {
			Periode: new Date()
		},
		dom: {},
		eventHandlers: {
			onClickBtnExcel: function () {
				var o = this;
				o.dom.$grid.data('kendoGrid').saveAsExcel();
			},
			onClickBtnLoad: function(){
				var o = this;

				$.ajax({
					method: 'post',
					headers: { 'Content-Type': 'application/json', 'XApiKey': 'pgH7QzFHJx4w46fI~5Uzi4RvtTwlEXp' },
					url: "@myurl"+'LastInitStock/INQ',
					dataType: 'text',
					data: JSON.stringify({
						Periode: kendo.toString(o.data.Periode, 'yyyyMM')
					})
				}).done(function (data, textStatus, jqXHR) {
					try {
						var result = JSON.parse(data);
					}
					catch (e) {
						swal.fire('Error', 'Error loading grid', 'error');
						options.success({ data: [] });
						return;
					}

					var schemaFields = {
						ExCore: {type: "string"},
						JobNo: {type: "string"},
						SupplierCode: {type: "string"},
						SupplierName: {type: "string"},
					};

					var columns =
					[
						{
							field: "ExCore",
							title: "Ex Core",
							width: 100,
							template: "<div class='customClass'> #= (ExCore == null) ? ' ' : kendo.toString(ExCore, '') # </div>",
						},
						{
							field: "JobNo",
							title: "Job No",
							width: 70,
						},
						{
							title: "Supplier",
							columns: [
							{
								field: "SupplierCode",
								title: "Code",
								width: 70,
							},
							{
								field: "SupplierName",
								title: "Name",
								width: 150,
								template: "<div class='customClass'> #= (SupplierName == null) ? ' ' : kendo.toString(SupplierName, '') # </div>",
							}]
						}
					];

					var tgl = (new Date()).getDate();

					for(var key in result[0]){
						if(result[0].hasOwnProperty(key)){
							if(['ExCore'].indexOf(key) >= 0){
								continue;
							}
							if(['JobNo'].indexOf(key) >= 0){
								continue;
							}
							if(['SupplierCode'].indexOf(key) >= 0){
								continue;
							}
							if(['SupplierName'].indexOf(key) >= 0){
								continue;
							}

							schemaFields[key] = {type: 'number'};
							columns.push(
								{
									field: key,
									title: key.substring(1,3) + '/' + key.substring(3,5) + '/' + key.substring(5),
									width: 75,
									filterable: false,
									template: "<div class='customClass' style='text-align:right;'> #= (" + key + " == null) ? '0.00' : kendo.toString(" + key + ", '0.00') # </div>",
								},
							);
						}
					}

					if(typeof o.dom.$grid.data('kendoGrid') != 'undefined'){
						o.dom.$grid.data('kendoGrid').destroy();
						o.dom.$grid.empty();
					}

					console.log(result);
					o.dom.$grid.kendoGrid({
						excel: {
							fileName: "Last Init Stock.xlsx",
							allPages: true,
							filterable: true
						},
						dataSource: {
							transport: {
								read: function (options) {
									options.success(result);
								}
							},
							schema: {
								model: {
									fields: schemaFields
								}
							},
							pageSize: 20
						},
						scrollable: true,
						sortable: true,
						resizable: true,
						reorderable: true,
						filterable: {
							extra: false,
							operators: {
								string: {
									contains: "Contains",
									eq: "Equal to",
									neq: "Not equal to"
								}
							}
						},
						pageable: {
							refresh: true,
							input: true,
							numeric: true,
							pageSizes: true,
							buttonCount: 5
						},
						columns: columns,
						toolbar: $("#template_toolbar").html(),
						dataBound: function(e) {
							o.initAfter();
						}
					});
				}).fail(function (jqXHR, textStatus, errorThrown) {
					swal.fire('Error', (jqXHR.responseText !== '' ? ': ' + jqXHR.responseText : ''), 'error');
					options.success({ data: [] });
				});
			}
		},
		init: function () {
			var o = this;
			o.cacheDom();
			o.attachEvents();
			o.initElements();
		},
		initElements: function () {
			var o = this;

			o.dom.$btnLoad.click();
		},
		initAfter: function(){
			var o = this;
			o.dom.Periode = $("#Periode");

			o.dom.Periode.kendoDatePicker({
				format: 'yyyyMM',
				depth: 'year',
				start: 'year',
				value: o.data.Periode,
				change: function () {
					o.data.Periode = this.value() != null ? this.value() : '';

					if(this.value()){
						o.dom.$grid.data('kendoGrid').dataSource.read();
						o.dom.$btnLoad.click();
					}
				}
			});
		}
	};

	$(function () {
		AppD.init();
	});
</script>

<script type="text/x-kendo-template" id="template_toolbar">
	<span class="k-pager-refresh" style="font-weight: bold">&nbsp;&nbsp;- Last Init Stock -&nbsp;&nbsp;</span>
	<div class="toolbar">
		<button data-toggle="tooltip" title="Save as Excel" type="button" class="btn ink-reaction btn-floating-action btn-xs btn-warning" id="btnExcel">
			<i class="k-icon k-i-excel"></i>
		</button>
		&nbsp;&nbsp;
		<input type="date" id="Periode" placeholder="Periode" />
	</div>
</script>
