@{
	ViewData["Title"] = "Master Approval LDK";
	string myurl = new ConfigurationBuilder().AddJsonFile("appsettings.json").Build().GetSection("Path:URL").Value;
}

<style>
	.k-dropdown-wrap .k-input, .k-numeric-wrap .k-input, .k-picker-wrap .k-input {
		height: 30px;
	}
</style>

<div class="page-main">
	<div class="page-content padding-5">
		<div id="grid" style="margin-top:5px; margin-bottom:5px;"></div>
	</div>
</div>

<div class="modal fade modal-primary" id="editor" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<h4 class="modal-title" id="myModalTitle">Master Approval LDK</h4>
			</div>
			<div class="modal-body margin-bottom-0 padding-bottom-0">
				<div class="panel">
					<div class="panel-body">
						<form class="form-horizontal">
							<div class="col-md-12">
								<div class="form-group form-material col-md-6">
									<label class="col-sm-3 control-label">Shop</label>
									<div class="col-sm-9">
										<input type="text" class="" id="ShopId" style="width:100%" required />
									</div>
								</div>
								<div class="form-group form-material col-md-6">
									<label class="col-sm-3 control-label">Department</label>
									<div class="col-sm-9">
										<input type="text" class="" id="DeptId" style="width:100%" required />
									</div>
								</div>
							</div>
							<div class="col-md-12">
								<div class="form-group form-material col-md-6">
									<label class="col-sm-3 control-label">Approval 1</label>
									<div class="col-sm-9">
										<input type="text" class="Approval" id="Approval1" style="width:100%" required />
									</div>
								</div>
								<div class="form-group form-material col-md-6">
									<label class="col-sm-3 control-label">Approval 2</label>
									<div class="col-sm-9">
										<input type="text" class="Approval" id="Approval2" style="width:100%" required />
									</div>
								</div>
								<div class="form-group form-material col-md-6">
									<label class="col-sm-3 control-label">Approval 3</label>
									<div class="col-sm-9">
										<input type="text" class="Approval" id="Approval3" style="width:100%" required />
									</div>
								</div>
								<div class="form-group form-material col-md-6">
									<label class="col-sm-3 control-label">Approval 4</label>
									<div class="col-sm-9">
										<input type="text" class="Approval" id="Approval4" style="width:100%" required />
									</div>
								</div>
							</div>
							<div class="clearfix"></div>
						</form>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal" id='clear'>Close</button>
				<button type="button" class="btn btn-primary" id="btnSave">Submit</button>
			</div>
		</div>
	</div>
</div>

<script>
	var AppLDKId = ''; var IUType = 'I';

	var AppD = {
		attachEvents: function () {
			var o = this;
			o.dom.$btnSave.on('click', o.eventHandlers.onClickBtnSave.bind(o));

			o.dom.$grid.on('click', '#btnCreate', o.eventHandlers.onClickBtnCreate.bind(o));
			o.dom.$grid.on('click', '#btnExcel', o.eventHandlers.onClickBtnExcel.bind(o));

			o.dom.$grid.on('click', '.btnUpdate', o.eventHandlers.onClickBtnUpdate.bind(o));
			o.dom.$grid.on('click', '.btnDelete', o.eventHandlers.onClickBtnDelete.bind(o));
		},
		cacheDom: function () {
			var o = this;
			o.dom.$editor = $("#editor");
			o.dom.$grid = $("#grid");
			o.dom.inputs = {};
			o.dom.$btnSave = $("#btnSave");
		},
		data: {},
		dom: {},
		eventHandlers: {
			onClickBtnCreate: function () {
				var o = this;
				AppLDKId = '';
				IUType = 'I';

				$("#ShopId").data("kendoComboBox").value('');
				$("#DeptId").data("kendoComboBox").value('');
				$("#Approval1").data("kendoComboBox").value('');
				$("#Approval2").data("kendoComboBox").value('');
				$("#Approval3").data("kendoComboBox").value('');
				$("#Approval4").data("kendoComboBox").value('');
				
				$("#ShopId").data("kendoComboBox").enable(true);

				o.dom.$editor.modal('show');
			},
			onClickBtnDelete: function (e) {
				var o = this;
				var di = o.dom.$grid.data('kendoGrid').dataItem($(e.target).closest('tr'));

				swal.fire({
					title: 'Delete?',
					text: "You won't be able to revert this!",
					icon: 'warning',
					showCancelButton: true,
					confirmButtonText: 'Yes'
				}).then((result) => {
					if (result.isConfirmed) {
						$.ajax({
							method: 'post',
							headers: { 'Content-Type': 'application/json', 'XApiKey': 'pgH7QzFHJx4w46fI~5Uzi4RvtTwlEXp' },
							url: "@myurl" + 'MasterApprovalLDK/DEL',
							dataType: 'text',
							data: JSON.stringify({
								AppLDKId: di.AppLDKId
							})
						}).done(function (data, textStatus, jqXHR) {
							if (data !== 'success') {
								swal.fire('', data, 'error');
								return;
							}
							swal.fire({ title: 'Success', text: 'Data deleted', icon: 'success', timer: 2000, showConfirmButton: false });
						}).fail(function (jqXHR, textStatus, errorThrown) {
							swal.fire('Error', (jqXHR.responseText !== '' ? ': ' + jqXHR.responseText : ''), 'error');
						}).always(function (data_or_jqXHR, textStatus, jqXHR_or_errorThrown) {
							o.dom.$grid.data('kendoGrid').dataSource.read();
						});
					}
				});
			},
			onClickBtnExcel: function () {
				var o = this;
				o.dom.$grid.data('kendoGrid').saveAsExcel();
			},
			onClickBtnUpdate: function (e) {
				var o = this;
				var di = o.dom.$grid.data('kendoGrid').dataItem($(e.target).closest('tr'));
				IUType = 'U';

				AppLDKId = di.AppLDKId;
				$("#ShopId").data("kendoComboBox").value(di.ShopId);
				$("#DeptId").data("kendoComboBox").value(di.DeptId);
				$("#Approval1").data("kendoComboBox").value(di.Approval1_ID);
				$("#Approval2").data("kendoComboBox").value(di.Approval2_ID);
				$("#Approval3").data("kendoComboBox").value(di.Approval3_ID);
				$("#Approval4").data("kendoComboBox").value(di.Approval4_ID);

				$("#ShopId").data("kendoComboBox").enable(false);
				$("#DeptId").data("kendoComboBox").enable(false);

				o.dom.$editor.modal('show');
			},
			onClickBtnSave: function () {
				var o = this;
				var ShopId = $("#ShopId").data("kendoComboBox").value();
				var DeptId = $("#DeptId").data("kendoComboBox").value();
				var Approval1 = $("#Approval1").data("kendoComboBox").value();
				var Approval2 = $("#Approval2").data("kendoComboBox").value();
				var Approval3 = $("#Approval3").data("kendoComboBox").value();
				var Approval4 = $("#Approval4").data("kendoComboBox").value();

				if (ShopId != '' && DeptId != '' && Approval1 != '' && Approval2 != '' && Approval3 != '' && Approval4 != '') {
					swal.fire({
						title: "Save?",
						icon: 'warning',
						showCancelButton: true,
						confirmButtonText: 'Yes'
					}).then((result) => {
						if (result.isConfirmed) {
							$.ajax({
								method: 'post',
								headers: { 'Content-Type': 'application/json', 'XApiKey': 'pgH7QzFHJx4w46fI~5Uzi4RvtTwlEXp' },
								url: "@myurl" + 'MasterApprovalLDK/INS',
								dataType: 'text',
								data: JSON.stringify({
									AppLDKId: AppLDKId,
									ShopId: ShopId,
									DeptId: DeptId,
									Approval1_ID: Approval1,
									Approval2_ID: Approval2,
									Approval3_ID: Approval3,
									Approval4_ID: Approval4,
									IUType: IUType,
									UserLogin: "@Context.Session.GetString("PIC_ID")"
								})
							}).done(function (data, textStatus, jqXHR) {
								if (data !== 'success') {
									swal.fire('Error', data, 'error');
									return;
								}
								o.dom.$editor.modal('hide');
								swal.fire({ title: 'Success', text: 'Data saved', icon: 'success', timer: 2000, showConfirmButton: false });
							}).fail(function (jqXHR, textStatus, errorThrown) {
								swal.fire('Error', (jqXHR.responseText !== '' ? ': ' + jqXHR.responseText : ''), 'error');
							}).always(function (data_or_jqXHR, textStatus, jqXHR_or_errorThrown) {
								o.dom.$grid.data('kendoGrid').dataSource.read();
							});
						}
					});
				} else {
					swal.fire({ title: 'Warning', text: 'Please fill all fields', icon: 'warning' });
				}
			}
		},
		init: function () {
			var o = this;
			o.cacheDom();
			o.attachEvents();
			o.initElements();
		},
		initElements: function () {
			var o = this;

			o.dom.$grid.kendoGrid({
				excel: {
					fileName: "Master Approval LDK.xlsx",
					allPages: true,
					filterable: true
				},
				dataSource: {
					transport: {
						read: function (options) {
							$.ajax({
								method: 'post',
								headers: { 'Content-Type': 'application/json', 'XApiKey': 'pgH7QzFHJx4w46fI~5Uzi4RvtTwlEXp' },
								url: "@myurl" + 'MasterApprovalLDK/INQ',
								dataType: 'text',
								data: JSON.stringify({
									UserLogin: "@Context.Session.GetString("PIC_ID")"
								})
							}).done(function (data, textStatus, jqXHR) {
								try {
									var result = JSON.parse(data);
								}
								catch (e) {
									swal.fire('Error', 'Error loading grid', 'error');
									options.success({ data: [] });
									return;
								}
								options.success(result);
							}).fail(function (jqXHR, textStatus, errorThrown) {
								swal.fire('Error', (jqXHR.responseText !== '' ? ': ' + jqXHR.responseText : ''), 'error');
								options.success({ data: [] });
							});
						}
					},
					schema: {
						model: {
							id: "AppLDKId",
							fields: {
								AppLDKId: { type: "string" },
								ShopId: { type: "string" },
								ShopName: { type: "string" },
								DeptId: { type: "string" },
								DeptName: { type: "string" },
								Approval1_ID: { type: "string" },
								Approval1_Name: { type: "string" },
								Approval2_ID: { type: "string" },
								Approval2_Name: { type: "string" },
								Approval3_ID: { type: "string" },
								Approval3_Name: { type: "string" },
								Approval4_ID: { type: "string" },
								Approval4_Name: { type: "string" },
								UserUpdate: { type: "string" },
								DateUpdate: { type: "string" }
							}
						}
					},
					pageSize: 20
				},
				scrollable: true,
				sortable: true,
				resizable: true,
				reorderable: true,
				filterable: {
					extra: false,
					operators: {
						string: {
							contains: "Contains",
							eq: "Equal to",
							neq: "Not equal to"
						}
					}
				},
				pageable: {
					refresh: true,
					input: true,
					numeric: true,
					pageSizes: true,
					buttonCount: 5
				},
				columns: [
					@if (Context.Session.GetString("edit_master_approval_ldk") == "True")
					{
					<text>
					{
						width: 50,
						command: [{
							name: "Update",
							text: "<i class='fa fa-pencil-square-o btnUpdate' style='font-size:18px;color:#737373;'></i>"
						}]
					},
					</text>
					}
					@if (Context.Session.GetString("del_master_approval_ldk") == "True")
					{
					<text>
					{
						width: 50,
						command: [{
							name: "Delete",
							text: "<i class='fa fa-trash-o btnDelete' style='font-size:18px;color:#800000;'></i>"
						}]
					},
					</text>
					}
					{
						field: "ShopId",
						title: "Shop",
						width: 100,
						hidden: true
					},
					{
						field: "ShopName",
						title: "Shop",
						width: 100
					},
					{
						field: "DeptId",
						title: "Department",
						width: 100,
						hidden: true
					},
					{
						field: "DeptName",
						title: "Dept",
						width: 200,
						template: "<div class='customClass'> #= (DeptName == null) ? ' ' : kendo.toString(DeptName, '') # </div>",
					},
					{
						title: "Approval",
						columns: [
						{
							field: "Approval1_Name",
							title: "1st",
							template: "<div class='customClass'> #= (Approval1_Name == null) ? ' ' : kendo.toString(Approval1_Name, '') # </div>",
							width: 150
						},
						{
							field: "Approval2_Name",
							title: "2nd",
							template: "<div class='customClass'> #= (Approval2_Name == null) ? ' ' : kendo.toString(Approval2_Name, '') # </div>",
							width: 150
						},
						{
							field: "Approval3_Name",
							title: "3rd",
							template: "<div class='customClass'> #= (Approval3_Name == null) ? ' ' : kendo.toString(Approval3_Name, '') # </div>",
							width: 150
						},
						{
							field: "Approval4_Name",
							title: "4th",
							template: "<div class='customClass'> #= (Approval4_Name == null) ? ' ' : kendo.toString(Approval4_Name, '') # </div>",
							width: 150
						}]
					},
					{
						title: "Last Update",
						columns: [
						{
							field: "UserUpdate",
							title: "User",
							width: 100
						},
						{
							field: "DateUpdate",
							title: "Date",
							template: "<div class='customClass'> #= (DateUpdate == null) ? ' ' : kendo.toString(DateUpdate, '') # </div>",
							width: 100
						}]
					}],
				toolbar: $("#template_toolbar").html(),
			});

			$("#ShopId").kendoComboBox({
				dataValueField: "ShopId",
				dataTextField: "ViewValue",
				filter: 'contains',
				dataSource: {
					transport: {
						read: function (options) {
							$.ajax({
								method: 'post',
								headers: { 'Content-Type': 'application/json', 'XApiKey': 'pgH7QzFHJx4w46fI~5Uzi4RvtTwlEXp' },
								url: "@myurl" + 'DropDown/INQ',
								dataType: 'text',
								data: JSON.stringify({ Ftype: "AppLDKShop", Plant: "" })
							}).done(function (data, textStatus, jqXHR) {
								try {
									var result = JSON.parse(data);
								}
								catch (e) {
									swal.fire('Error', 'Error loading grid', 'error');
									options.success({ data: [] });
									return;
								}
								options.success(result);
							}).fail(function (jqXHR, textStatus, errorThrown) {
								swal.fire('Error', (jqXHR.responseText !== '' ? ': ' + jqXHR.responseText : ''), 'error');
								options.success({ data: [] });
							});
						}
					}
				},
				change: function (e) {
					if (this.value() && this.selectedIndex == -1) {
						this._filterSource({
							value: this.value(),
							field: this.options.dataTextField,
							operator: "contains"
						});
						this.select(0);
						if (this.selectedIndex == -1) {
							this.text("");
							this.value("");
						}
					}
				}
			}).data("kendoComboBox");

			$("#DeptId").kendoComboBox({
				cascadeFrom: "ShopId",
				autoBind: false,
				dataValueField: "IdValue",
				dataTextField: "ViewValue",
				filter: 'contains',
				dataSource: {
					transport: {
						read: function (options) {
							$.ajax({
								method: 'post',
								headers: { 'Content-Type': 'application/json', 'XApiKey': 'pgH7QzFHJx4w46fI~5Uzi4RvtTwlEXp' },
								url: "@myurl" + 'DropDown/INQ',
								dataType: 'text',
								data: JSON.stringify({ Ftype: "Dept", Plant: "" })
							}).done(function (data, textStatus, jqXHR) {
								try {
									var result = JSON.parse(data);
									console.log(data);
								}
								catch (e) {
									swal.fire('Error', 'Error loading grid', 'error');
									options.success({ data: [] });
									return;
								}
								options.success(result);
							}).fail(function (jqXHR, textStatus, errorThrown) {
								swal.fire('Error', (jqXHR.responseText !== '' ? ': ' + jqXHR.responseText : ''), 'error');
								options.success({ data: [] });
							});
						}
					}
				},
				change: function (e) {
					if (this.value() && this.selectedIndex == -1) {
						this._filterSource({
							value: this.value(),
							field: this.options.dataTextField,
							operator: "contains"
						});
						this.select(0);
						if (this.selectedIndex == -1) {
							this.text("");
							this.value("");
						}
					}
				}
			}).data("kendoComboBox");

			$(".Approval").kendoComboBox({
				dataValueField: "IdValue",
				dataTextField: "ViewValue",
				filter: 'contains',
				dataSource: {
					transport: {
						read: function (options) {
							$.ajax({
								method: 'post',
								headers: { 'Content-Type': 'application/json', 'XApiKey': 'pgH7QzFHJx4w46fI~5Uzi4RvtTwlEXp' },
								url: "@myurl" + 'DropDown/INQ',
								dataType: 'text',
								data: JSON.stringify({ Ftype: "AppLDKUser" })
							}).done(function (data, textStatus, jqXHR) {
								try {
									var result = JSON.parse(data);
									console.log(data);
								}
								catch (e) {
									swal.fire('Error', 'Error loading grid', 'error');
									options.success({ data: [] });
									return;
								}
								options.success(result);
							}).fail(function (jqXHR, textStatus, errorThrown) {
								swal.fire('Error', (jqXHR.responseText !== '' ? ': ' + jqXHR.responseText : ''), 'error');
								options.success({ data: [] });
							});
						}
					}
				},
				change: function (e) {
					if (this.value() && this.selectedIndex == -1) {
						this._filterSource({
							value: this.value(),
							field: this.options.dataTextField,
							operator: "contains"
						});
						this.select(0);
						if (this.selectedIndex == -1) {
							this.text("");
							this.value("");
						}
					}
				}
			}).data("kendoComboBox");
		}
	};

	$(function () {
		AppD.init();
	});
</script>

<script type="text/x-kendo-template" id="template_toolbar">
	<span class="k-pager-refresh" style="font-weight: bold">&nbsp;&nbsp;- Master Approval LDK -&nbsp;&nbsp;</span>
	<div class="toolbar">
	@if (Context.Session.GetString("add_master_approval_ldk") == "True")
	{
		<button data-toggle="tooltip" title="Create" type="button" class="btn ink-reaction btn-floating-action btn-xs btn-warning" id="btnCreate">
			<i class="k-icon k-i-plus"></i>
		</button>
	}
		<button data-toggle="tooltip" title="Save as Excel" type="button" class="btn ink-reaction btn-floating-action btn-xs btn-warning" id="btnExcel">
			<i class="k-icon k-i-excel"></i>
		</button>
	</div>
</script>